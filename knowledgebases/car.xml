               <fact name="start_without_sound">No</fact>
               <fact name="battery">New</fact>
               <fact name="key_type">Classic</fact>
               </and>
            </if>
            <then>
               <fact name="identified_problem">Key not recognised</fact>
            </then>
         </rule>

            <rule>
            <description>Car doesn't start, makes a sound, battery ok, smart key dead</description>
            <if>
               <and>
               <fact name="problem">Car not starting</fact>
               <fact name="start_without_sound">No</fact>
               <fact name="battery">New</fact>
               <fact name="key_type">Smart</fact>
               <or>
                  <fact name="car_key">Dead</fact>
                  <fact name="car_key">Almost dead</fact>
               </or>
               </and>
            </if>
            <then>
               <fact name="identified_problem">Replace key battery</fact>
            </then>
         </rule>

         <rule>
            <description>Car doesn't start, makes a sound, lights don't work</description>
            <if>
               <and>
               <fact name="start_without_sound">Yes</fact>
