                     <fact name="lights">Flicker</fact>
                     <fact name="green_dot">Low battery</fact>
                  </or>
               </and>
            </if>
            <then>
               <fact name="battery">Dead</fact>
            </then>
         </rule>

         <rule>
            <description>Battery has a low level of electrolytes.</description>
            <if>
               <or>
                  <fact name="lights">Dim</fact>
                  <fact name="lights">Flicker</fact>
                  <fact name="green_dot">Low battery</fact>
               </or>
            </if>
            <then>
               <fact name="battery">Low Electrolytes</fact>
            </then>
         </rule>

         <rule>
            <description>Battery is discharged.</description>
            <if>
               <or>
                  <fact name="lights">Dim</fact>
                  <fact name="lights">Flicker</fact>
                  <fact name="green_dot">Low battery</fact>
               </or>
            </if>
            <then>
               <fact name="battery">Discharged.</fact>
            </then>
         </rule>

         <rule>
            <description>Battery functions normally.</description>
            <if>
               <and>
                  <fact name="old_battery">New</fact>>
                  <fact name="green_dot">Normal</fact>
               </and>
            </if>
            <then>
               <fact name="battery">Normal</fact>
            </then>
         </rule>

      <!--  Rules for car not starting without sound -->

         <rule>
